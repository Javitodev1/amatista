---
import '@fontsource/montez'
import '@fontsource-variable/lora'
import { ViewTransitions } from 'astro:transitions'
import Header from './partials/Header.astro'
import Footer from './partials/Footer.astro'
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html
  lang="en"
  class="font-lora"
>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Astro description"
    />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <script src="@/scripts/flowbite.min.js"></script>
    <style is:global>
      * {
        box-sizing: border-box;
        min-width: 0;
      }

      body {
        min-height: 100dvh;
      }

      h1,
      h2,
      h3,
      h4 {
        text-wrap: balance;
      }

      p {
        text-wrap: pretty;
      }
    </style>
  </body>
</html>
