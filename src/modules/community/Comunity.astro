---
import Layout from "@/layouts/Layout.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import TextContainer from "@/components/TextContainer.astro"
import Logo from "@/icons/Logo.astro"

import heroImg from "@public/optimized/comunidad_hero.webp"
import cupon_bg_img from "@public/optimized/cupon_bg.webp"
import logo_papeleria from "@public/optimized/papeleriacreative.webp"
import logo_biocosmetica from "@public/optimized/biocosmetica.webp"
import logo_ecojabones from "@public/optimized/ecojabones.webp"
import comunidad_sec_1 from "@public/optimized/comunidad_sec_1.webp"

const alliance = [
  {
    logo: logo_papeleria.src,
    name: "PALEREIALCREATIVA",
    instagramTag: "@PAPELERIACREATIVA",
    href: "https://www.instagram.com/papeleriacreativa/",
  },
  {
    logo: logo_biocosmetica.src,
    name: "BIOCOSMETICA",
    instagramTag: "@BIOCOSMETICA",
    href: "#",
  },
  {
    logo: logo_ecojabones.src,
    name: "ECOJABONES",
    instagramTag: "@ECOJABONES",
    href: "https://www.instagram.com/ecojabones/",
  },
]
---

<Layout>
  <!-- Hero -->
  <section>
    <div class="relative z-0">
      <div
        style={`background-image: url(${heroImg.src});`}
        class="h-screen w-full bg-cover bg-center bg-no-repeat"
      >
      </div>
      <span class="absolute top-0 left-0 h-screen w-full bg-black/50"></span>
      <div class="absolute h-screen w-full top-0 left-0">
        <div
          class="flex h-full flex-col text-center justify-center items-center"
        >
          <h2 class="text-raw_white text-3xl md:text-5xl font-bold">
            REVOLUCIONANDO LA CULTURA
          </h2>
          <h2 class="text-raw_white text-3xl md:text-5xl font-bold">
            COLABORATIVA MIENTRAS
          </h2>
          <h2 class="text-raw_white text-3xl md:text-5xl font-bold mb-6">
            <strong class="text-amatista">CO-CREAMOS</strong>
          </h2>

          <p
            class="text-raw_white text-xl md:text-3xl font-normal font-roboto max-w-sm md:max-w-fit"
          >
            UNA VISIÓN COMPARTIDA DEL FUTURO PARA LOGRAR NUESTRA
          </p>
          <p
            class="text-raw_white text-xl md:text-3xl font-normal font-roboto mb-12"
          >
            <strong class="text-amatista">SOSTENIBILIDAD</strong>
          </p>

          <a
            href="/contacto"
            class="uppercase text-xl text-raw_white font-semibold border-raw_white border-4 py-4 px-12 hover:backdrop-blur hover:text-raw_white/75 hover:border-raw_white/75 duration-300"
            >contactame
          </a>
        </div>
      </div>
    </div>
  </section>
  <!-- End Banner -->

  <SectionContainer>
    <div class="grid grid-cols-2 gap-12">
      <div>
        <div
          style={`background-image: url(${comunidad_sec_1.src});`}
          class="w-full aspect-square bg-center bg-cover"
        >
        </div>
      </div>

      <div class="flex justify-center items-center">
        <TextContainer>
          <h2>Comunidad amatista</h2>
          <p>
            Nos unimos para formar una comunidad donde creamos juntas un mundo
            tanto tangible como energético.
          </p>
          <p>
            Aquí, la unión de mujeres trasciende las limitaciones, ofreciendo un
            espacio accesible para todos y todas. Nuestro enfoque se centra en
            un estilo de vida sostenible, minimalista, auténtico y unica,
            diseñada para personas de todos los estilos.
          </p>
          <p>
            ¡Bienvenidos a un lugar donde la belleza se encuentra en la
            diversidad y la autenticidad!
          </p>
        </TextContainer>
      </div>
    </div>
  </SectionContainer>

  <!-- Banner Cupones -->
  <SectionContainer>
    <div class="flex justify-center">
      <div class="relative w-[700px]">
        <div
          style={`background-image: url(${cupon_bg_img.src});`}
          class="aspect-video w-full bg-center bg-cover"
        >
        </div>
        <div class="absolute top-0 left-0 w-full h-full">
          <div class="flex px-12 py-14">
            <div class="w-full text-center flex flex-col justify-center">
              <h3 class="text-2xl text-golden font-bold uppercase mb-4">
                cupón de descuento
              </h3>
              <h2
                class="text-4xl text-amatista font-normal uppercase leading-tight mb-6"
              >
                co-creamos alianzas
              </h2>
              <p class="text-7xl font-bold text-amatista">10%</p>
            </div>
            <div class="w-full">
              <Logo variant="v" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </SectionContainer>
  <!-- End Banner Cupones -->

  <SectionContainer>
    <TextContainer>
      <h2 class="flex justify-center">Co-crea con Amatistas</h2>
    </TextContainer>
    <div class="grid grid-cols-3">
      {alliance.map(({ logo, name, instagramTag, href }) => (
        <div class="flex flex-col items-center">
          <img
            src={logo}
            alt={name}
            class="w-[300px] aspect-square object-cover object-center"
          />
          <h3>{name}</h3>
          <a
            href={href}
            class="hover:underline hover:text-amatista"
            target="_blank"
          >
            <p>{instagramTag}</p>
          </a>
        </div>
      ))}
    </div>
  </SectionContainer>
</Layout>
