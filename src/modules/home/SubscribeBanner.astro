---
import SectionContainer from '@/components/SectionContainer.astro'
import TextContainer from '@/components/TextContainer.astro'

interface Texts {
  title: string
  subtitle: string
  content: string
}

interface Props {
  texts: Texts
}

const { texts } = Astro.props
---

<SectionContainer>
  <div class="flex flex-col items-center justify-center">
    <TextContainer>
      <h2 class="flex justify-center">{texts.title}</h2>
      <p
        class="max-w-xl text-center"
        set:html={texts.content}
      />
    </TextContainer>

    <form
      action="emailto:#"
      class="relative mb-6"
    >
      <label for="email-form">
        <input
          id="email-form"
          name="email"
          type="email"
          placeholder="Email"
          class="w-[350px] md:w-[400px] peer"
        />
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 512 512"
          class="w-4 h-4 opacity-40 absolute top-1/2 -translate-y-1/2 right-4 peer-focus:opacity-80"
        >
          <path
            d="M502.6 278.6c12.5-12.5 12.5-32.8 0-45.3l-128-128c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L402.7 224 32 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l370.7 0-73.4 73.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0l128-128z"
          ></path>
        </svg>
      </label>
    </form>
    <TextContainer>
      <h3 class="uppercase text-2xl font-semibold">{texts.subtitle}</h3>
    </TextContainer>
  </div>
</SectionContainer>
