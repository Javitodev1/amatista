---
import TextContainer from '@/components/TextContainer.astro'
import SectionContainer from '@/components/SectionContainer.astro'
import InstagramIcon from '@/icons/Instagram.astro'
import WhatappsIcon from '@/icons/Whatapps.astro'

interface Texts {
  title: string
  subtitle: string
  description: string
  slogan: string
}

interface Props {
  texts: Texts
}

const { texts } = Astro.props
---

<SectionContainer variant="darker">
  <TextContainer class="text-center">
    <h2>{texts.title}</h2>
    <h3>{texts.subtitle}</h3>
    <p class="max-w-xl mx-auto">{texts.description}</p>
  </TextContainer>
  <div class="flex justify-center mb-4 gap-x-12">
    <a
      href="https://api.whatsapp.com/message/YSRW3CZPDBAED1?autoload=1&app_absent=0"
      target="_blank"
    >
      <WhatappsIcon class="hover:text-amatista" />
    </a>
    <a
      href="https://www.instagram.com/amatista.comunidad/"
      target="_blank"
    >
      <InstagramIcon class="hover:text-amatista" />
    </a>
  </div>
  <TextContainer class="max-w-xl mx-auto text-center">
    <h3>{texts.slogan}</h3>
  </TextContainer>
</SectionContainer>
