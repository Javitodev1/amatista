---
import Layout from '@/layouts/Layout.astro'
import Whatsapp from '@/components/Whatsapp.astro'
import Hero from './Hero.astro'
import NewArrival from './NewArrival.astro'
import ComunidadBanner from './ComunidadBanner.astro'
import CollectionBanner from './CollectionBanner.astro'
import AgedBanner from './AgedBanner.astro'
import HealingKit from './HealingKit.astro'
import SubscribeBanner from './SubscribeBanner.astro'
import ContactBanner from './ContactBanner.astro'
import HowToBuyBanner from './HowToBuyBanner.astro'
import Separator from '@/components/Separator.astro'

import { fetchSections } from '@/libs/section.tsx'

interface HomeSections {
  hero: { [key: string]: string }
  recien_llegados: { [key: string]: string }
  como_comprar: { [key: string]: string }
  banner_comunidad: { [key: string]: string }
  banner_coleccion: { [key: string]: string }
  banner_aged: { [key: string]: string }
  kit_sanacion: { [key: string]: string }
  banner_suscribite: { [key: string]: string }
  banner_contacto: { [key: string]: string }
}

const PAGE = 'home'
const sections = fetchSections(PAGE) satisfies HomeSections
---

<Layout 
  title="Amatista - Tienda online de ropa de segunda mano envíos a todo Uruguay" 
  description='Nuestros productos second hand nos ayudan a lograr el propósito de vestir cuerpos sagrados con prendas únicas, logrando re circular la moda y fomentando un consumo mas amigable y sostenible con el planeta, Alargamos el ciclo de prendas únicas y sustentables  como blusas, camisas, pantalones, vestidos, abrigos, poleras y accesorios, a precios increíbles. enviamos a Maldonado, Montevideo, canelones, rocha y todo uruguay. '
  >
  <Hero texts={sections.hero} />
  <NewArrival texts={sections.recien_llegados} />
  <HowToBuyBanner texts={sections.como_comprar} />

  <Separator />

  <ComunidadBanner texts={sections.banner_comunidad} />
  <CollectionBanner texts={sections.banner_coleccion} />

  <Separator
    reverseColors={true}
    direction="right"
    variant="H3"
  />

  <AgedBanner texts={sections.banner_aged} />
  <HealingKit texts={sections.kit_sanacion} />

  <Separator
    direction="left"
    variant="H2"
  />

  <SubscribeBanner texts={sections.banner_suscribite} />
  <ContactBanner texts={sections.banner_contacto} />

  <Whatsapp />
</Layout>
