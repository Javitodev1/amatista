---
import Layout from '@/layouts/Layout.astro'
import Whatsapp from '@/components/Whatsapp.astro'
import Hero from './Hero.astro'
import NewArrival from './NewArrival.astro'
import ComunidadBanner from './ComunidadBanner.astro'
import CollectionBanner from './CollectionBanner.astro'
import AgedBanner from './AgedBanner.astro'
import HealingKit from './HealingKit.astro'
import SubscribeBanner from './SubscribeBanner.astro'
import ContactBanner from './ContactBanner.astro'
import HowToBuyBanner from './HowToBuyBanner.astro'
import Separator from '@/components/Separator.astro'

import textsFetched from '@/data/texts.json'

const sections = [
  'hero',
  'recien_llegados',
  'como_comprar',
  'banner_comunidad',
  'banner_coleccion',
  'aged_banner',
  'kit_sanacion',
  'banner_suscribite',
  'banner_contacto',
]
---

<Layout title="Amatista - Indumentaria - Second hand shop">
  <Hero />
  <NewArrival />
  <HowToBuyBanner />

  <Separator />

  <ComunidadBanner />
  <CollectionBanner />

  <Separator
    reverseColors={true}
    direction="right"
    variant="H3"
  />

  <AgedBanner />
  <HealingKit />

  <Separator
    direction="left"
    variant="H2"
  />

  <SubscribeBanner />
  <ContactBanner />

  <Whatsapp />
</Layout>
