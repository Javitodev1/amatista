---
import TextContainer from './TextContainer.astro'
interface Props {
  title: string
  content: string
  image: string
  class?: string
}

const { title, content, image, class: className } = Astro.props
---

<div
  class:list={[className]}
  class="flex flex-col justify-center p-8"
>
  <img
    src={image}
    alt={title}
  />
  <div class="h-full">
    <TextContainer>
      <h3>{title}</h3>
      <p>{content}</p>
    </TextContainer>
  </div>
</div>
