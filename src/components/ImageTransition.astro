---
interface ImageItem {
  imageUrl: string
  text: string
}

interface Props {
  class?: string
  items?: ImageItem[]
}

const { class: className, items=[] } = Astro.props

---

<div
  class="relative z-0 h-screen w-full overflow-hidden"
  class:list={[className]}
>
  <div class="animation absolute left-0 top-0 w-full">
    {items.map(({ imageUrl, text }) => (
      <div class="relative z-0">
        <div class="overflow-hidden">
          <div
            style={`background-image: url(${imageUrl});`}
            class="zoom-in-anim h-screen w-full bg-cover bg-center bg-no-repeat"
          />
        </div>
        <span class="absolute left-0 top-0 h-full w-full bg-slate-950/40" />
        <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2">
          <h2 class="text-center text-5xl font-bold uppercase text-white">
            {text}
          </h2>
        </div>
      </div>
    ))}
  </div>
</div>

<style>
  .animation {
    animation: slide-up 15s steps(3) infinite, fade-in-out 5s linear infinite;
  }

  .zoom-in-anim {
    animation: zoom-in 5s linear infinite;
  }

  @keyframes slide-up {
    to {
      top: -300vh;
    }
  }
  @keyframes fade-in-out {
    from {
      opacity: 0%;
    }
    15%,
    85% {
      opacity: 100%;
    }

    to {
      opacity: 0%;
    }
  }
  @keyframes zoom-in {
    to {
      scale: 115%;
    }
  }
</style>
