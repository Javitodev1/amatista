---
interface Props {
  class?: string
}
const { class: className } = Astro.props
---

<a
  href="/"
  class="flex items-center"
>
  <img
    src="/images/logo-amatista.svg"
    class="mr-3 h-6 sm:h-9"
    class:list={className}
    alt="Amatista Logo"
  />
  <span
    class="text-amatista self-center md:text-5xl font-semibold whitespace-nowrap"
    >Amatista</span
  >
</a>
